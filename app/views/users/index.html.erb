<% if customer_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Pocket Actuary Users</h1>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
 </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.customer == current_customer%>
        <tr>
          <td><%= link_to user.first_name + ' '+ user.last_name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.user_id %></td>
          <td><%= link_to 'Add Info', new_information_path, class:'btn btn-outline-success btn-sm'%></td>
          <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-outline-info btn-sm'%></td>
          <td><%= link_to 'Delete', user, class:'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-dark" %>

<% else %>
<h1>Pocket Actuary Home Page</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% end %>
